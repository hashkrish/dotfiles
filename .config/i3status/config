general {
        output_format = "i3bar"
        colors = true
        interval = 5
        separator = "  |  "
}

order += "ethernet eth0"
order += "load"
order += "memory"
order += "wireless wlan0"

order += "volume master"
order += "tztime local"
order += "battery 0"

volume master {
        format = "â™ª %volume"
        format_muted = "â™ª MUTE (%volume)"
        device = "default"
        color_degraded="#ffffff95"
}

wireless wlan0 {
        format_up = "ï‡«   %ip"
        format_down = "âš  "
        color_good="#ffffff95"
}

ethernet eth0 {
        format_up = "ó°ˆ€ %ip (%speed)"
        format_down = ""
}

battery 0 {
        format = "%status %percentage"
        format_down = "No battery"
        status_chr = "ï‡¦ "
        status_bat = "ðŸ”‹"
        status_unk = "? UNK"
        status_full = "ï‰€  "
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPNC {
        # file containing the PID of a vpnc process
        pidfile = "/var/run/vpnc/pid"
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
}

tztime local {
        format = "%-d %A %H:%M %Z"
        hide_if_equals_localtime = false
}

tztime berlin {
        format = "%Y-%m-%d %H:%M:%S %Z"
        timezone = "Europe/Berlin"
}

load {
        format = "%1min"
}

cpu_temperature 0 {
        format = "T: %degrees Â°C"
        path = "/sys/devices/platform/coretemp.0/temp1_input"
}

memory {
        format = "%used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

disk "/" {
        format = "%free"
}

read_file uptime {
        path = "/proc/uptime"
}
