{
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
      "filetypes": ["haskell", "lhaskell"]
    },

    "coc.preferences.formatOnSaveFiletypes": ["python"],
    "venv": "venv",
    // "python.venvPath": "${env:HOME}/.virtualenvs/online-degree-app-venv",
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "${env:HOME}/.local/bin/black",
    "htmldjango.djlint.enableLint": false,
    "htmldjango.formatting.provider": "djhtml",

    "pyright.organizeimports.provider": "isort",
    "python.sortImports.args": ["--profile", "black"]
  }
}
